datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Reminder {
  createdAt   DateTime  @default(now())
  event       Event?    @relation(fields: [eventId], references: [id])
  eventId     String?
  id          String    @id @default(cuid())
  message     String?
  triggerTime DateTime?
  updatedAt   DateTime  @updatedAt
}

model Notification {
  createdAt        DateTime  @default(now())
  event            Event?    @relation(fields: [eventId], references: [id])
  eventId          String?
  id               String    @id @default(cuid())
  message          String?
  notificationTime DateTime?
  recipient        String?
  updatedAt        DateTime  @updatedAt
}

model Event {
  createdAt     DateTime       @default(now())
  description   String?
  endTime       DateTime?
  id            String         @id @default(cuid())
  location      String?
  notifications Notification[]
  reminders     Reminder[]
  startTime     DateTime?
  title         String?
  updatedAt     DateTime       @updatedAt
  user          User?          @relation(fields: [userId], references: [id])
  userId        String?
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  events    Event[]
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
